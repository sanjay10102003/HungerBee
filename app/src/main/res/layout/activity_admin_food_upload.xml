<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFoodUploadActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/adminToolbar"
            layout="@layout/custom_toolbar"/>

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/adminToolbar"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/no_image_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imgItem"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="Food Name"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtItemName"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtName"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:hint="Food Name"
                    android:background="@drawable/custom_edittext"
                    android:inputType="textPersonName" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtItemPrice"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/txtPrice"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:hint="Food Price"
                    android:background="@drawable/custom_edittext"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtcategory"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="Category"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_toRightOf="@+id/txtcategory" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtOurSpecial"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="Our Special"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/OurSpecialSpinner"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_toRightOf="@+id/txtOurSpecial" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/txtAvailability"
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="Availability"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/AvailabilitySpinner"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_edittext"
                    android:layout_toRightOf="@+id/txtAvailability" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnUploadItem"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Upload Food"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>