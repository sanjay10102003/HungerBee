<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginActivity"
    android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/merienda_one"
        android:shadowRadius="15"
        android:layout_marginTop="90dp"
        android:text="HungerBee"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:text="User LogIn"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtUserPhnNumlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_below="@+id/txtlogin"
        android:layout_marginTop="40dp"
        android:visibility="visible"/>

    <Spinner
        android:id="@+id/Spinnerlogin"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_edittext"
        android:layout_below="@id/txtUserPhnNumlogin"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/edtUserPhnNumlogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/Spinnerlogin"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:inputType="number"
        android:text="8072092923"
        android:layout_below="@id/txtUserPhnNumlogin"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btnUserlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Send OTP"
        android:textColor="@color/white"
        android:layout_below="@id/edtUserPhnNumlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtOTPlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_below="@+id/txtlogin"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/edtUserloginOTP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Enter OTP"
        android:inputType="textPersonName"
        android:text="112233"
        android:layout_below="@id/txtOTPlogin"
        android:background="@drawable/custom_edittext"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnUserloginOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:layout_below="@id/edtUserloginOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBarUserloginOTP"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
</RelativeLayout>